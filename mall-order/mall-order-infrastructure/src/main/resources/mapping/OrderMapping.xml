<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gexingw.mall.order.infra.gateway.db.OrderMapper">

    <select id="queryAppList" resultType="com.gexingw.mall.order.infra.po.OrderPO">
        select number, total_amount, total_quantity, id, create_time
        from `order`
        <where>
            <if test="query.number != null and query.number != ''">
                and number = #{query.number}
            </if>
        </where>
    </select>

</mapper>
